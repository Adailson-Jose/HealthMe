<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C59DE4"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="usuario.gui.TelaInicialNavActivity"
    tools:showIn="@layout/app_bar_tela_inicial_nav"
    android:backgroundTint="@color/colorPrimary">

    <TextView
        android:id="@+id/boasVindas"
        android:layout_width="368dp"
        android:layout_height="426dp"
        android:gravity="center"
        android:text="Bem-vindo(a), "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="5dp" />

    <Button
        android:id="@+id/btn_panico"
        android:layout_width="370dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:background="@color/colorPanic"
        android:onClick="panico"
        android:text="@string/btn_panico"
        android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.981" />
</android.support.constraint.ConstraintLayout>
